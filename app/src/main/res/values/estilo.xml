<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowNoTitle">false</item> <!-- Opcional si no quiero título en la barra de acciones -->
        <item name="windowActionBar">true</item> <!-- Habilita la ActionBar -->


    </style>




    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item> <!-- Color de fondo del Toolbar -->
        <item name="android:titleTextColor">@android:color/white</item> <!-- Color del título -->
        <item name="android:gravity">center</item> <!-- Centrar el título -->
    </style>

</resources>